{
  "name": "meshage",
  "version": "0.1.7",
  "description": "A simple peer-to-peer service mesh for HTTP services",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf coverage dist tmp",
    "watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --type-check --exclude '**/*.js' --project 'tsconfig.json'",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "test": "jest --runInBand --coverage",
    "test:watch": "jest --watch --runInBand --coverage",
    "build": "npm run -s clean && npm run -s lint && tsc -p tsconfig.release.json"
  },
  "author": "John Collier <john.collier4@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@github1/grapevine": "^1.0.6",
    "body-parser": "^1.17.2",
    "consul": "^0.33.1",
    "debug": "^3.0.1",
    "express": "^4.15.4",
    "express-http-proxy": "^1.0.6",
    "hashring": "^3.2.0",
    "superagent": "^3.8.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/consul": "^0.23.32",
    "@types/debug": "0.0.30",
    "@types/express": "^4.0.37",
    "@types/node": "^8.0.26",
    "@types/superagent": "^3.8.1",
    "@types/uuid": "^3.4.3",
    "jest": "^23.1.0",
    "nodemon": "^1.11.0",
    "portfinder-sync": "0.0.2",
    "portman": "0.0.3",
    "rimraf": "^2.6.1",
    "ts-jest": "^22.4.6",
    "tslint": "^5.7.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "tsutils": "^2.8.2",
    "typescript": "^2.9.2"
  }
}
